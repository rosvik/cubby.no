{{#if manifest.content}}
    <li class="manifest-item">
        {{manifest.name}}
        <pre class="manifest-content">{{manifest.content}}</pre>
    </li>
{{else}}
    <li
        class="manifest-item"
        hx-trigger="click"
        hx-swap="outerHTML"
        hx-get="/manifest/{{manifest.path}}"
    >
        {{manifest.name}}
    </li>
{{/if}}
